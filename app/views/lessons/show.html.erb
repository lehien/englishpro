<% provide :title, @lesson.name %>

<div class="container" style="margin-top:30px">
<div class="row">
  <aside class="col-md-4">
    <% if @lesson.picture? %>
      <%= image_tag @lesson.picture.url %>
    <% else %>
      <%= image_tag "default-picture.png" %>
    <% end %>
  </aside>
  <aside class="col-md-4">
    <h1 class="text-left"><%= @lesson.name %></h1>
    <p><%= @lesson.description %></p>
  </aside>
  <aside class="col-md-3">
    <%= link_to t("start_lession"),  lesson_tests_path(lesson_id: @lesson),
        method: :post, class: "btn-lg btn-block btn-primary" %>
  </aside>  
</div>
<div class="row">
  <aside class="col-md-7">
    <table class="table center">
      <thead>
        <tr class="success">
          <th class="center"><%= t "word" %></th>
          <th class="center"><%= t "mean" %></th>
        </tr>
      </thead>
      <% @words.each do |word| %>
      <tbody>
        <tr>
          <td><%= word.content %></td>
          <td>
            <% word.answers.each do |answer| %>
              <%= answer.content if answer.correct %>
            <% end %>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
    <%= will_paginate @words %>
  </aside>
</div>
</div>