<h2>Edit <%= resource_name.to_s.humanize %></h2>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
    
      <% params[:email] = current_user.email %><br />
    
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
    
      <div class="field">
        <%= f.label "新しいパスワード" %> <i>(パスワードさえ変えたくなければ、ここをブランクのままにしておいてください)</i><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>
    
      <div class="field">
        <%= f.label "新しいパスワード再入力" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>
    
      <div class="field">
        <%= f.label "現在のパスワード" %> <i>(プロフィール修正を確定するため、現在のパスワードが必要です)</i><br />
        <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
      </div>
      
      <div class="field">
        <%= f.label "名前" %><br />
        <%= f.text_field :name, :value => current_user.name, class: "form-control"%>
      </div>
    
      <div class="field">
        <%= f.label "性" %><br />
        <%= f.select :gender, options_for_select(["===","男性", "女性"], current_user.gender),  class: "form-control"  %><br />
      </div>
    
      <div class="field">
        <%= f.label "年齢" %><br />
        <%= f.number_field :age, :value => current_user.age, class: "form-control" %>
      </div>
    
      <div class="actions">
        <%= f.submit "アップデート", class: "btn btn-info" %>
      </div>
    <% end %>
    
    <h3>アカウントを削除？</h3>
    
    <p>不幸？ <%= button_to "アカウントを削除", registration_path(resource_name), data: { confirm: "本気ですか?" }, method: :delete, class: "btn btn-danger" %></p>
    
    <%= link_to "戻る", :back %>
</div>
</div>