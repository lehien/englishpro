<header class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <%= link_to "EnglishPro", root_path, id: "logo" %>
    <form class="navbar-form pull-left" role="search">
      <div class="input-group" id="search_bar">
        <input type="text" class="form-control" placeholder="EnglishPro で検索" size="25">
          <div class="input-group-btn">
            <button type="submit" class="btn btn-default">
            <span class="glyphicon glyphicon-search"></span>
            </button>
          </div>
      </div>
    </form>
    <nav>
      <ul class="nav navbar-nav">
        <li><%= link_to "ホーム",   root_path %></li>
        <% if user_signed_in? %>
        <li><%= link_to "ユーザのリスト", users_path %></li>
        <li><%= link_to "単語リスト", words_path%></li>
        <li><%= link_to "レッソン", lessons_path%></li>
        <li><%= link_to "ゴール", plans_path%></li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.email %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to " プロファイル" , user_path(current_user), class: "glyphicon glyphicon-user" %></li>
              <li><%= link_to " 情報の編集", edit_user_registration_path(current_user), class: "glyphicon glyphicon-pencil" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to " ログアウト", destroy_user_session_path,  class: "glyphicon glyphicon-log-out", method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "サインアップ", new_user_registration_path  %></li>
          <li><%= link_to "ログイン", new_user_session_path  %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>